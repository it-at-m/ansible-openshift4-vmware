apiVersion: v1alpha1
kind: AgentConfig
metadata:
  name: {{ cluster_id }}
{%- if openshift_sno is truthy(convert_bool=True) %}
rendezvousIP: {{ static_network_part }}.127
{%- else %}
rendezvousIP: {{ static_network_part }}.10
{% endif %}
hosts:
{%- if openshift_sno is truthy(convert_bool=True) %}
  - hostname: master-0
    role: master
    interfaces:
      - name: ens192
        macAddress: {{ baremetal_mac_address["master-0"] }}
    networkConfig:
      interfaces:
        - name: ens192
          type: ethernet
          state: up
          mac-address: {{ baremetal_mac_address["master-0"] }}
          ipv4:
            enabled: true
            address:
              - ip: {{ static_network_part }}.127
                prefix-length: {{ machine_network_hostprefix }} 
            dhcp: false
      dns-resolver:
        config:
          server: {{ openshift_nameservers }}
      routes:
        config:
          - destination: 0.0.0.0/0
            next-hop-address: {{ openshift_gateway }}
            next-hop-interface: ens192
            table-id: 254

{%- else %}
  - hostname: master-0
    role: master
    interfaces:
      - name: ens192
        macAddress: {{ baremetal_mac_address["master-0"] }}
    networkConfig:
      interfaces:
        - name: ens192
          type: ethernet
          state: up
          mac-address: {{ baremetal_mac_address["master-0"] }}
          ipv4:
            enabled: true
            address:
              - ip: {{ static_network_part }}.10
                prefix-length: {{ machine_network_hostprefix }} 
            dhcp: false
      dns-resolver:
        config:
          server: {{ openshift_nameservers }}
      routes:
        config:
          - destination: 0.0.0.0/0
            next-hop-address: {{ openshift_gateway }}
            next-hop-interface: ens192
            table-id: 254
  - hostname: master-1
    role: master
    interfaces:
      - name: ens192
        macAddress: {{ baremetal_mac_address["master-1"] }}
    networkConfig:
      interfaces:
        - name: ens192
          type: ethernet
          state: up
          mac-address: {{ baremetal_mac_address["master-1"] }}
          ipv4:
            enabled: true
            address:
              - ip: {{ static_network_part }}.11
                prefix-length: {{ machine_network_hostprefix }}
            dhcp: false
      dns-resolver:
        config:
          server: {{ openshift_nameservers }}
      routes:
        config:
          - destination: 0.0.0.0/0
            next-hop-address: {{ openshift_gateway }}
            next-hop-interface: ens192
            table-id: 254
  - hostname: master-2
    role: master
    interfaces:
      - name: ens192
        macAddress: {{ baremetal_mac_address["master-2"] }}
    networkConfig:
      interfaces:
        - name: ens192
          type: ethernet
          state: up
          mac-address: {{ baremetal_mac_address["master-2"] }}
          ipv4:
            enabled: true
            address:
              - ip: {{ static_network_part }}.12
                prefix-length: {{ machine_network_hostprefix }} 
            dhcp: false
      dns-resolver:
        config:
          server: {{ openshift_nameservers }}
      routes:
        config:
          - destination: 0.0.0.0/0
            next-hop-address: {{ openshift_gateway }}
            next-hop-interface: ens192
            table-id: 254
{% endif %}
{% if openshift_sno is not truthy(convert_bool=True) and openshift_compact_cluster is not truthy(convert_bool=True) %}
  - hostname: worker-0
    role: worker
    interfaces:
      - name: ens192
        macAddress: {{ baremetal_mac_address["worker-0"] }}
  - hostname: worker-1
    role: worker
    interfaces:
      - name: ens192
        macAddress: {{ baremetal_mac_address["worker-1"] }}
  - hostname: worker-2
    role: worker
    interfaces:
      - name: ens192
        macAddress: {{ baremetal_mac_address["worker-2"] }}
{%- endif %}
